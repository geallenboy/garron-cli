{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@garron/cli-ui": ["./packages/lobe-cli-ui/src"],
      "@garron/cli-ui/*": ["./packages/lobe-cli-ui/src/*"],
      "@garron/lobe-i18n": ["./packages/lobe-i18n/src"],
      "@garron/lobe-i18n/*": ["./packages/lobe-i18n/src/*"]
    }
  },
  "extends": "../../tsconfig.json",
  "include": ["src", "**/*.ts", "**/*.d.ts", "**/*.tsx", ".i18nrc.ts"]
}
